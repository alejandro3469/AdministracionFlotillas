@using AdministracionFlotillas.Web.ViewModels
@{
    ViewData["Title"] = "Gesti贸n de Rutas";
}

<div class="container-fluid">
    @if (ViewBag.Breadcrumb != null)
    {
        @await Html.PartialAsync("_BreadcrumbConIndicadores", ViewBag.Breadcrumb as BreadcrumbViewModel)
    }

    <div class="row mb-3">
        <div class="col-12">
            <h2 class="mb-0">Gesti贸n de Rutas de Reparto</h2>
            <p class="text-muted">Administraci贸n de rutas y optimizaci贸n de entregas</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body py-2">
                    <div class="d-flex flex-wrap align-items-center gap-3">
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-route text-primary"></i>
                            <span class="text-muted small">Total:</span>
                            <strong class="text-primary" id="totalRutas">0</strong>
                        </div>
                        <div class="vr"></div>
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-check-circle text-success"></i>
                            <span class="text-muted small">Activas:</span>
                            <strong class="text-success" id="rutasActivas">0</strong>
                        </div>
                        <div class="vr"></div>
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-truck text-info"></i>
                            <span class="text-muted small">Total Entregas:</span>
                            <strong class="text-info" id="totalEntregas">0</strong>
                        </div>
                        <div class="vr"></div>
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-chart-line text-success"></i>
                            <span class="text-muted small">Eficiencia Promedio:</span>
                            <strong class="text-success" id="eficienciaPromedio">0%</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-2">
                    <h5 class="card-title mb-0">Lista de Rutas</h5>
                    <button type="button" class="btn btn-primary btn-sm" onclick="Routes.Grid.Recargar()">
                        <i class="fas fa-sync-alt"></i> <span class="d-none d-sm-inline">Actualizar</span>
                    </button>
                </div>
                <div class="card-body">
                    @await Html.PartialAsync("_RoutesGrid")
                </div>
            </div>
        </div>
    </div>
    
    @await Html.PartialAsync("_ModalRuta")
</div>

@section Scripts {
    <script src="~/js/Routes/Routes.js" asp-append-version="true"></script>
    <script>
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', function() {
                inicializarMetricasRoutes();
            });
        } else {
            inicializarMetricasRoutes();
        }
        
        function inicializarMetricasRoutes() {
            if (window.Routes && window.Routes.Dashboard) {
                window.Routes.Dashboard.ActualizarMetricas();
            } else {
                setTimeout(function() {
                    if (window.Routes && window.Routes.Dashboard) {
                        window.Routes.Dashboard.ActualizarMetricas();
                    }
                }, 500);
            }
        }
    </script>
}
