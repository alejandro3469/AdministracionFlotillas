@using AdministracionFlotillas.Web.ViewModels
@{
    ViewData["Title"] = "Gestión de Adendas";
}

<div class="container-fluid">
    @if (ViewBag.Breadcrumb != null)
    {
        @await Html.PartialAsync("_BreadcrumbConIndicadores", ViewBag.Breadcrumb as BreadcrumbViewModel)
    }

    <div class="row mb-3">
        <div class="col-12">
            <h2 class="mb-0">Gestión de Adendas</h2>
            <p class="text-muted">Contratos especiales y condiciones comerciales para clientes grandes</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body py-2">
                    <div class="d-flex flex-wrap align-items-center gap-3">
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-file-contract text-primary"></i>
                            <span class="text-muted small">Total:</span>
                            <strong class="text-primary" id="totalAdendas">0</strong>
                        </div>
                        <div class="vr"></div>
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-check-circle text-success"></i>
                            <span class="text-muted small">Activas:</span>
                            <strong class="text-success" id="adendasActivas">0</strong>
                        </div>
                        <div class="vr"></div>
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-clock text-warning"></i>
                            <span class="text-muted small">Expiradas:</span>
                            <strong class="text-warning" id="adendasExpiradas">0</strong>
                        </div>
                        <div class="vr"></div>
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-times-circle text-danger"></i>
                            <span class="text-muted small">Canceladas:</span>
                            <strong class="text-danger" id="adendasCanceladas">0</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-2">
                    <h5 class="card-title mb-0">Lista de Adendas</h5>
                    <button type="button" class="btn btn-primary btn-sm" onclick="Addendums.Grid.Recargar()">
                        <i class="fas fa-sync-alt"></i> <span class="d-none d-sm-inline">Actualizar</span>
                    </button>
                </div>
                <div class="card-body">
                    @await Html.PartialAsync("_AddendumsGrid")
                </div>
            </div>
        </div>
    </div>
    
    @await Html.PartialAsync("_ModalAdenda")
</div>

@section Scripts {
    <script src="~/js/Addendums/Addendums.js" asp-append-version="true"></script>
    <script>
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', function() {
                inicializarMetricasAddendums();
            });
        } else {
            inicializarMetricasAddendums();
        }
        
        function inicializarMetricasAddendums() {
            if (window.Addendums && window.Addendums.Dashboard) {
                window.Addendums.Dashboard.ActualizarMetricas();
            } else {
                setTimeout(function() {
                    if (window.Addendums && window.Addendums.Dashboard) {
                        window.Addendums.Dashboard.ActualizarMetricas();
                    }
                }, 500);
            }
        }
    </script>
}
