@using AdministracionFlotillas.Web.ViewModels
@{
    ViewData["Title"] = "Facturaci贸n CFDI";
}

<div class="container-fluid">
    @if (ViewBag.Breadcrumb != null)
    {
        @await Html.PartialAsync("_BreadcrumbConIndicadores", ViewBag.Breadcrumb as BreadcrumbViewModel)
    }

    <div class="row mb-3">
        <div class="col-12">
            <h2 class="mb-0">Facturaci贸n Electr贸nica CFDI</h2>
            <p class="text-muted">Gesti贸n de facturas y cumplimiento SAT</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <div class="card card-indicadores">
                <div class="card-body py-2">
                    <div class="d-flex flex-wrap align-items-center gap-3">
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-file-invoice text-primary"></i>
                            <span class="text-muted small">Total:</span>
                            <strong class="text-primary" id="totalFacturas">0</strong>
                        </div>
                        <div class="vr"></div>
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-check-circle text-success"></i>
                            <span class="text-muted small">Timbradas:</span>
                            <strong class="text-success" id="facturasTimbradas">0</strong>
                        </div>
                        <div class="vr"></div>
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-file text-warning"></i>
                            <span class="text-muted small">Borrador:</span>
                            <strong class="text-warning" id="facturasBorrador">0</strong>
                        </div>
                        <div class="vr"></div>
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-times-circle text-danger"></i>
                            <span class="text-muted small">Canceladas:</span>
                            <strong class="text-danger" id="facturasCanceladas">0</strong>
                        </div>
                        <div class="vr"></div>
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-dollar-sign text-success"></i>
                            <span class="text-muted small">Total Facturado:</span>
                            <strong class="text-success" id="totalFacturado">$0.00</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-2">
                    <h5 class="card-title mb-0">Lista de Facturas</h5>
                    <button type="button" class="btn btn-primary btn-sm" onclick="Invoicing.Grid.Recargar()">
                        <i class="fas fa-sync-alt"></i> <span class="d-none d-sm-inline">Actualizar</span>
                    </button>
                </div>
                <div class="card-body">
                    @await Html.PartialAsync("_InvoicesGrid")
                </div>
            </div>
        </div>
    </div>
    
    @await Html.PartialAsync("_ModalFactura")
</div>

@section Scripts {
    <script src="~/js/Invoicing/Invoicing.js" asp-append-version="true"></script>
    <script>
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', function() {
                inicializarMetricasInvoicing();
            });
        } else {
            inicializarMetricasInvoicing();
        }
        
        function inicializarMetricasInvoicing() {
            if (window.Invoicing && window.Invoicing.Dashboard) {
                window.Invoicing.Dashboard.ActualizarMetricas();
            } else {
                setTimeout(function() {
                    if (window.Invoicing && window.Invoicing.Dashboard) {
                        window.Invoicing.Dashboard.ActualizarMetricas();
                    }
                }, 500);
            }
        }
    </script>
}
