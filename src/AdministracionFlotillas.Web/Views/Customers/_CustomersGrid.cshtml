<!-- Filtros -->
<div class="row mb-3 g-3">
    <div class="col-12 col-sm-6 col-md-4">
        <label class="form-label">Nombre</label>
        <input type="text" id="filtroNombre" class="form-control" placeholder="Buscar por nombre" onchange="filtroNombreChange()" />
    </div>
    <div class="col-12 col-sm-6 col-md-4">
        <label class="form-label">Estado</label>
        <ejs-dropdownlist id="filtroEstado" 
                          placeholder="Todos los estados"
                          dataSource="@(new string[] { "ACTIVE", "INACTIVE" })"
                          change="filtroEstadoChange">
        </ejs-dropdownlist>
    </div>
    <div class="col-12 col-sm-6 col-md-4 d-flex align-items-end">
        <button type="button" class="btn btn-secondary w-100" onclick="Customers.Filtros.Limpiar()">
            <i class="fas fa-times"></i> Limpiar Filtros
        </button>
    </div>
</div>

<!-- Grid Syncfusion -->
<ejs-grid id="customersGrid" 
          allowPaging="true"
          allowFiltering="true"
          allowSorting="true"
          allowSelection="true"
          allowExcelExport="true"
          allowPdfExport="true"
          allowResizing="true"
          is-responsive="true"
          enable-responsive-row="true"
          toolbarClick="customersGridToolbarClick"
          toolbar="@(new List<string>() { "Search", "ExcelExport", "PdfExport" })"
          rowSelected="customersGridRowSelected"
          actionComplete="customersGridActionComplete"
          dataBound="customersGridDataBound"
          created="customersGridCreated">
    <e-grid-loadingIndicator indicatorType="Shimmer"></e-grid-loadingIndicator>
    <e-grid-pagesettings pageSize="10" pageSizes="@(new int[] { 10, 25, 50, 100 })"></e-grid-pagesettings>
    <e-grid-columns>
        <e-grid-column field="IdCliente" headerText="ID" width="80" isPrimaryKey="true" type="number" textAlign="Right"></e-grid-column>
        <e-grid-column field="NombreCliente" headerText="Nombre" width="200"></e-grid-column>
        <e-grid-column field="Email" headerText="Email" width="200"></e-grid-column>
        <e-grid-column field="Telefono" headerText="Teléfono" width="120"></e-grid-column>
        <e-grid-column field="Ciudad" headerText="Ciudad" width="120"></e-grid-column>
        <e-grid-column field="EstadoCliente" headerText="Estado" width="120" template="#estadoTemplate"></e-grid-column>
        <e-grid-column field="TotalOrdenes" headerText="Total Órdenes" width="120" type="number" textAlign="Right"></e-grid-column>
        <e-grid-column field="TotalCompras" headerText="Total Compras" width="150" type="number" format="C2" textAlign="Right"></e-grid-column>
        <e-grid-column headerText="Acciones" width="150" template="#accionesTemplate"></e-grid-column>
    </e-grid-columns>
</ejs-grid>

<!-- Template para estado -->
<script id="estadoTemplate" type="text/x-template">
    <span class="badge ${if(EstadoCliente === 'ACTIVE')}bg-success${else}bg-secondary${/if}">${EstadoCliente}</span>
</script>

<!-- Template para acciones -->
<script id="accionesTemplate" type="text/x-template">
    <div class="d-flex gap-1">
        <button class="btn btn-sm btn-info btn-cabecera-cliente" data-id-cliente="${IdCliente}" 
                title="Información de Cabecera: ID, Nombre, Estado, Fecha de Registro. Información básica e identificadores del cliente.">
            <i class="fas fa-id-card"></i> <span class="d-none d-sm-inline">Cabecera</span>
        </button>
        <button class="btn btn-sm btn-success btn-comercial-cliente" data-id-cliente="${IdCliente}" 
                title="Información Comercial: Límite de Crédito, Total de Órdenes, Total de Compras, Métricas de actividad. Datos financieros y de relación comercial.">
            <i class="fas fa-chart-line"></i> <span class="d-none d-sm-inline">Comercial</span>
        </button>
        <button class="btn btn-sm btn-warning btn-contacto-cliente" data-id-cliente="${IdCliente}" 
                title="Información de Contacto: Email, Teléfono, Dirección completa. Datos de contacto y ubicación del cliente.">
            <i class="fas fa-address-book"></i> <span class="d-none d-sm-inline">Contacto</span>
        </button>
    </div>
</script>
