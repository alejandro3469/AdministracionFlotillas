@using AdministracionFlotillas.Web.ViewModels
@{
    ViewData["Title"] = "Gestión de Vendedores";
}

<div class="container-fluid">
    @if (ViewBag.Breadcrumb != null)
    {
        @await Html.PartialAsync("_BreadcrumbConIndicadores", ViewBag.Breadcrumb as BreadcrumbViewModel)
    }

    <div class="row mb-3">
        <div class="col-12">
            <h2 class="mb-0">Gestión de Vendedores</h2>
            <p class="text-muted">Administración de vendedores y comisiones</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body py-2">
                    <div class="d-flex flex-wrap align-items-center gap-3">
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-user-tie text-primary"></i>
                            <span class="text-muted small">Total:</span>
                            <strong class="text-primary" id="totalVendedores">0</strong>
                        </div>
                        <div class="vr"></div>
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-check-circle text-success"></i>
                            <span class="text-muted small">Activos:</span>
                            <strong class="text-success" id="vendedoresActivos">0</strong>
                        </div>
                        <div class="vr"></div>
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-dollar-sign text-info"></i>
                            <span class="text-muted small">Total Ventas:</span>
                            <strong class="text-info" id="totalVentas">$0.00</strong>
                        </div>
                        <div class="vr"></div>
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-percent text-success"></i>
                            <span class="text-muted small">Total Comisiones:</span>
                            <strong class="text-success" id="totalComisiones">$0.00</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-2">
                    <h5 class="card-title mb-0">Lista de Vendedores</h5>
                    <button type="button" class="btn btn-primary btn-sm" onclick="Salespersons.Grid.Recargar()">
                        <i class="fas fa-sync-alt"></i> <span class="d-none d-sm-inline">Actualizar</span>
                    </button>
                </div>
                <div class="card-body">
                    @await Html.PartialAsync("_SalespersonsGrid")
                </div>
            </div>
        </div>
    </div>
    
    @await Html.PartialAsync("_ModalVendedor")
</div>

@section Scripts {
    <script src="~/js/Salespersons/Salespersons.js" asp-append-version="true"></script>
    <script>
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', function() {
                inicializarMetricasSalespersons();
            });
        } else {
            inicializarMetricasSalespersons();
        }
        
        function inicializarMetricasSalespersons() {
            if (window.Salespersons && window.Salespersons.Dashboard) {
                window.Salespersons.Dashboard.ActualizarMetricas();
            } else {
                setTimeout(function() {
                    if (window.Salespersons && window.Salespersons.Dashboard) {
                        window.Salespersons.Dashboard.ActualizarMetricas();
                    }
                }, 500);
            }
        }
    </script>
}
