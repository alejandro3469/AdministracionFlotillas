<!-- Filtros -->
<div class="mb-5">
    <div class="row mb-3">
        <div class="col-md-4">
            <label for="filtroBusqueda" class="form-label">Buscar por Nombre</label>
            <input type="text" class="form-control" id="filtroBusqueda" placeholder="Buscar por nombre...">
        </div>
        <div class="col-md-4">
            <label class="form-label">Fecha de Contratación</label>
            <div class="input-group">
                <input type="text" class="form-control" id="filtroFechaInicio" placeholder="Desde" readonly>
                <span class="input-group-text">-</span>
                <input type="text" class="form-control" id="filtroFechaFin" placeholder="Hasta" readonly>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label class="form-label">Rango de Salario</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="text" class="form-control" id="filtroSalarioMin" placeholder="Mínimo" style="text-align: right;">
                <span class="input-group-text">-</span>
                <input type="text" class="form-control" id="filtroSalarioMax" placeholder="Máximo" style="text-align: right;">
            </div>
        </div>
        <div class="col-md-4">
            <label class="form-label">Rango de Salario Anual</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="text" class="form-control" id="filtroSalarioAnualMin" placeholder="Mínimo" style="text-align: right;">
                <span class="input-group-text">-</span>
                <input type="text" class="form-control" id="filtroSalarioAnualMax" placeholder="Máximo" style="text-align: right;">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label for="filtroDepartamento" class="form-label">Departamento</label>
            <input type="text" class="form-control" id="filtroDepartamento" placeholder="Buscar por departamento...">
        </div>
        <div class="col-md-4">
            <label for="filtroEmail" class="form-label">Email</label>
            <input type="text" class="form-control" id="filtroEmail" placeholder="Buscar por email...">
        </div>
        <div class="col-md-4">
            <label for="filtroEmailPersonal" class="form-label">Email Personal</label>
            <input type="text" class="form-control" id="filtroEmailPersonal" placeholder="Buscar por email personal...">
        </div>
        <div class="col-md-4">
            <label for="filtroTelefono" class="form-label">Teléfono</label>
            <input type="text" class="form-control" id="filtroTelefono" placeholder="Buscar por teléfono...">
        </div>
    </div>
</div>

<!-- Tabla -->
<div class="table-responsive">
    <table id="employeesTable" class="table table-striped table-hover table-bordered" style="width:100%">
        <thead class="table-dark">
            <tr>
                <th></th>
                <th>Nombre Completo</th>
                <th>Email</th>
                <th>Email Personal</th>
                <th>Teléfono</th>
                <th>Fecha Contratación</th>
                <th>Salario</th>
                <th>Salario Anual</th>
                <th>Departamento</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <!-- Los datos se cargan vía AJAX -->
        </tbody>
    </table>
</div>

