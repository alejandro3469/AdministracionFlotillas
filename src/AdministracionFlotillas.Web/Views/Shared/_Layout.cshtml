<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Administración</title>
    <script type="importmap"></script>
    
    <!-- Preload de recursos críticos para mejorar rendimiento -->
    <!-- Solo preloadamos recursos que se usan inmediatamente en el render inicial -->
    <link rel="preload" href="~/lib/bootstrap/dist/css/bootstrap.min.css" as="style" />
    <link rel="preload" href="https://cdn.syncfusion.com/ej2/32.1.23/fluent.css" as="style" />
    <!-- site.css y navigation.css se cargan después, usar prefetch en lugar de preload -->
    <link rel="prefetch" href="~/css/site.css" as="style" />
    <link rel="prefetch" href="~/css/navigation.css" as="style" />
    
    <!-- DNS Prefetch para CDNs externos -->
    <link rel="dns-prefetch" href="https://cdn.syncfusion.com" />
    <link rel="dns-prefetch" href="https://cdnjs.cloudflare.com" />
    <link rel="dns-prefetch" href="https://code.jquery.com" />
    <link rel="dns-prefetch" href="https://cdn.datatables.net" />
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- jQuery UI CSS (debe estar en head según documentación oficial) -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/ui-lightness/jquery-ui.css">
    
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css">
    
    <!-- Font Awesome 5 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <!-- Syncfusion ASP.NET Core controls styles -->
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/32.1.23/fluent.css" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navigation.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AdministracionFlotillas.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Skip to main content (Accesibilidad) -->
        <a href="#main-content" class="skip-to-main">Saltar al contenido principal</a>
        
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span>Sistema de Administración</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" 
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" 
                               asp-area="" asp-controller="Home" asp-action="Index" title="Dashboard Principal">
                                <i class="fas fa-home"></i>
                                <span class="d-none d-md-inline">Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Orders" ? "active" : "")" 
                               asp-area="" asp-controller="Orders" asp-action="Index" title="Gestión de Órdenes">
                                <i class="fas fa-shopping-cart"></i>
                                <span class="d-none d-md-inline">Órdenes</span>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Products" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Customers" ? "active" : "")" 
                               href="#" id="catalogosDropdown" role="button" data-bs-toggle="dropdown" 
                               aria-expanded="false" title="Catálogos del Sistema">
                                <i class="fas fa-book"></i>
                                <span class="d-none d-md-inline">Catálogos</span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="catalogosDropdown">
                                <li>
                                    <a class="dropdown-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Products" ? "active" : "")" 
                                       asp-controller="Products" asp-action="Index">
                                        <i class="fas fa-box"></i> Productos
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Customers" ? "active" : "")" 
                                       asp-controller="Customers" asp-action="Index">
                                        <i class="fas fa-users"></i> Clientes
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Chains" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Salespersons" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Routes" ? "active" : "")" 
                               href="#" id="ventasDropdown" role="button" data-bs-toggle="dropdown" 
                               aria-expanded="false" title="Módulos de Ventas">
                                <i class="fas fa-store"></i>
                                <span class="d-none d-md-inline">Ventas</span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="ventasDropdown">
                                <li>
                                    <a class="dropdown-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Chains" ? "active" : "")" 
                                       asp-controller="Chains" asp-action="Index">
                                        <i class="fas fa-building"></i> Cadenas
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Salespersons" ? "active" : "")" 
                                       asp-controller="Salespersons" asp-action="Index">
                                        <i class="fas fa-user-tie"></i> Vendedores
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Routes" ? "active" : "")" 
                                       asp-controller="Routes" asp-action="Index">
                                        <i class="fas fa-route"></i> Rutas
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Addendums" || ViewContext.RouteData.Values["Controller"]?.ToString() == "OrderChannels" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Invoicing" ? "active" : "")" 
                               href="#" id="administracionDropdown" role="button" data-bs-toggle="dropdown" 
                               aria-expanded="false" title="Módulos de Administración">
                                <i class="fas fa-cog"></i>
                                <span class="d-none d-md-inline">Administración</span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="administracionDropdown">
                                <li>
                                    <a class="dropdown-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Addendums" ? "active" : "")" 
                                       asp-controller="Addendums" asp-action="Index">
                                        <i class="fas fa-file-contract"></i> Adendas
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "OrderChannels" ? "active" : "")" 
                                       asp-controller="OrderChannels" asp-action="Index">
                                        <i class="fas fa-mobile-alt"></i> Canales de Pedidos
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Invoicing" ? "active" : "")" 
                                       asp-controller="Invoicing" asp-action="Index">
                                        <i class="fas fa-file-invoice"></i> Facturación
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" id="main-content">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; 2026 - Sistema de Administración
        </div>
    </footer>
    
    <!-- Scripts según orden oficial de documentación -->
    <!-- 1. jQuery (debe cargarse primero según documentación oficial) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    
    <!-- 2. Bootstrap JS (depende de jQuery - sin defer para mantener orden de ejecución) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- 3. jQuery UI (debe cargarse después de jQuery según documentación oficial - sin defer) -->
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    
    <!-- 4. jsZip (requerido por DataTables Buttons para Excel - puede usar defer) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js" defer></script>
    
    <!-- 5. pdfmake (requerido por DataTables Buttons para PDF - puede usar defer) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js" defer></script>
    
    <!-- 6. DataTables Core (depende de jQuery - sin defer para mantener orden de ejecución) -->
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    
    <!-- 7. DataTables Extensions (dependen de DataTables Core - sin defer) -->
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    
    <!-- 8. Inputmask (depende de jQuery - sin defer) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.8/jquery.inputmask.min.js"></script>
    
    <!-- 9. SweetAlert2 (no depende de jQuery, pero se carga después para evitar conflictos) -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11" defer></script>
    
    <!-- 10. Utilidades compartidas (antes de módulos específicos) -->
    <script src="~/js/utils/debounce.js" asp-append-version="true"></script>
    <script src="~/js/utils/modal-buttons.js" asp-append-version="true"></script>
    
    <!-- 11. Syncfusion ASP.NET Core controls scripts (SIN defer para que esté disponible antes del Script Manager) -->
    <script src="https://cdn.syncfusion.com/ej2/32.1.23/dist/ej2.min.js"></script>
    
    <!-- 12. Custom scripts (antes de Script Manager para que funciones de eventos estén disponibles) -->
    <script src="~/js/navigation.js" asp-append-version="true" defer></script>
    <script src="~/js/site.js" asp-append-version="true" defer></script>
    
    <!-- 13. Page-specific scripts (se renderizan aquí ANTES de Script Manager) -->
    @await RenderSectionAsync("Scripts", required: false)
    
    <!-- 14. Syncfusion ASP.NET Core Script Manager (OBLIGATORIO - debe ir al final, después de ej2.min.js) -->
    <ejs-scripts></ejs-scripts>
</body>
</html>
